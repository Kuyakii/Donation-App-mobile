{
  "expo": {
    "name": "DonationApp",
    "slug": "DonationApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/splash-logo.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-logo.png",
      "backgroundColor": "#E5B6FA"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
      "NSCameraUsageDescription": "Nous avons besoin de votre permission pour accéder à la caméra afin de scanner les QR codes."
    }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/splash-logo.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-barcode-scanner"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "userInterfaceStyle": "automatic"
  }
}
